{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "../wwwroot/scripts",
    "jsx": "react",
    "strictNullChecks": true,
    "lib": [ "dom", "es6" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],

  "types": [
    "jest"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ],

  "jest": {
    "moduleDirectories": [
      "node_modules"
    ]
  },

  "include": [ "**/__tests__/*.test.tsx", "**/__tests__/*.test.ts" ],

  "compileOnSave": true

}
