@model SmarterBalanced.SampleItems.Core.Repos.Models.GlobalAccessibilityViewModel

<h1>Accessibility Options</h1>


<p><b>NOTE:</b>
    Not all accessibility options can be applied to all items.
</p>

<br/>
@using (Html.BeginForm())
{
    @Html.EditorFor(m => m.AccessibilityResourceViewModels)

    <button class="btn btn-primary" type="submit">Submit</button>
    <button class="btn btn-info" type="button"
            onclick="location.href='@Url.Action("Reset", "GlobalAccessibility")'">
        Reset
    </button>
}



